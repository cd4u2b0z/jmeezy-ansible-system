---
# Ansible-lint configuration
# https://ansible.readthedocs.io/projects/lint/configuring/

profile: moderate

# Exclude paths from linting
exclude_paths:
  - .github/
  - files/dotfiles/

# Skip specific rules
skip_list:
  - yaml[line-length]       # Long lines in package lists are fine
  - name[casing]            # Allow flexible task naming
  - command-instead-of-module  # We use commands for paru/chezmoi intentionally
  - var-naming[no-role-prefix]  # Personal repo, no need for role prefixes

# Warn-only rules (don't fail CI)
warn_list:
  - experimental
  - no-changed-when
