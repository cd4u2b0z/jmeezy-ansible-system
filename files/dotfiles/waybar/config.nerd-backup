{
  "layer": "top",
  "position": "top",
  "height": 48,
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "margin": "0",
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "custom/weather",
    "clock"
  ],
  "modules-right": [
    "cpu",
    "memory",
    "pulseaudio",
    "network",
    "tray"
  ],

  "hyprland/workspaces": {
    "disable-scroll": true,
    "format": "{icon}",
    "format-icons": {
      "active": "â—",
