/* SLEEK NORD PROFESSIONAL THEME */

* {
  border: none;
  border-radius: 0;
  font-family: "JetBrainsMono Nerd Font", "SF Pro Display", system-ui, sans-serif;
  font-weight: 500;
  font-size: 13px;
  min-height: 0;
  color: #E5E9F0;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
}

window#waybar {
  background: linear-gradient(135deg,
    rgba(46, 52, 64, 0.85) 0%,
    rgba(59, 66, 82, 0.75) 50%,
    rgba(67, 76, 94, 0.85) 100%);
  border: 1px solid rgba(136, 192, 208, 0.25);
  border-radius: 16px;
  margin: 8px;
  padding: 0;
  box-shadow:
    0 8px 32px rgba(0, 0, 0, 0.4),
    0 0 0 1px rgba(216, 222, 233, 0.05),
    inset 0 1px 0 rgba(236, 239, 244, 0.1);
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

window#waybar:hover {
  background: linear-gradient(135deg,
    rgba(46, 52, 64, 0.9) 0%,
    rgba(59, 66, 82, 0.8) 50%,
    rgba(67, 76, 94, 0.9) 100%);
  box-shadow:
    0 12px 40px rgba(0, 0, 0, 0.5),
    0 0 0 1px rgba(136, 192, 208, 0.15),
    inset 0 1px 0 rgba(236, 239, 244, 0.15);
}

/* UNIVERSAL MODULE STYLING */
.modules-left > widget > *,
.modules-center > widget > *,
.modules-right > widget > * {
  margin: 3px 2px;
  padding: 8px 14px;
  background: linear-gradient(135deg,
    rgba(76, 86, 106, 0.6) 0%,
    rgba(67, 76, 94, 0.4) 100%);
  border: 1px solid rgba(129, 161, 193, 0.2);
  border-radius: 12px;
  color: #D8DEE9;
  font-weight: 600;
  box-shadow:
    0 2px 8px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(236, 239, 244, 0.08);
  transition: all 0.25s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.modules-left > widget > *:hover,
.modules-center > widget > *:hover,
.modules-right > widget > *:hover {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.3) 0%,
    rgba(129, 161, 193, 0.25) 50%,
    rgba(143, 188, 187, 0.3) 100%);
  border-color: rgba(136, 192, 208, 0.6);
  color: #ECEFF4;
  box-shadow:
    0 4px 16px rgba(0, 0, 0, 0.4),
    0 0 20px rgba(136, 192, 208, 0.2),
    inset 0 1px 0 rgba(236, 239, 244, 0.15);
  text-shadow: 0 0 8px rgba(136, 192, 208, 0.5);
}

/* WORKSPACES - Rugged Professional */
#workspaces {
  background: linear-gradient(135deg,
    rgba(76, 86, 106, 0.7) 0%,
    rgba(67, 76, 94, 0.5) 100%);
  border: 1px solid rgba(129, 161, 193, 0.3);
  border-radius: 14px;
  padding: 4px 6px;
  margin-right: 6px;
}

#workspaces button {
  padding: 6px 10px;
  margin: 0 1px;
  color: #81A1C1;
  background: rgba(59, 66, 82, 0.7);
  border: 1px solid rgba(76, 86, 106, 0.4);
  border-radius: 8px;
  font-weight: 700;
  font-size: 14px;
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
}

#workspaces button:hover {
  background: linear-gradient(135deg,
    rgba(129, 161, 193, 0.4) 0%,
    rgba(136, 192, 208, 0.3) 100%);
  color: #ECEFF4;
  border-color: rgba(129, 161, 193, 0.6);
  box-shadow: 0 0 12px rgba(129, 161, 193, 0.4);
}

#workspaces button.active {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.8) 0%,
    rgba(143, 188, 187, 0.7) 100%);
  color: #2E3440;
  border-color: rgba(136, 192, 208, 0.9);
  font-weight: 900;
  box-shadow: 
    0 0 16px rgba(136, 192, 208, 0.6),
    inset 0 2px 4px rgba(236, 239, 244, 0.3);
}

/* SYSTEM MONITORS - Technical Feel */
#cpu, #memory, #temperature {
  background: linear-gradient(135deg,
    rgba(94, 129, 172, 0.5) 0%,
    rgba(76, 86, 106, 0.3) 100%);
  border: 1px solid rgba(94, 129, 172, 0.4);
  color: #5E81AC;
  font-weight: 600;
}

#cpu:hover, #memory:hover, #temperature:hover {
  background: linear-gradient(135deg,
    rgba(94, 129, 172, 0.7) 0%,
    rgba(129, 161, 193, 0.5) 100%);
  color: #88C0D0;
  border-color: rgba(94, 129, 172, 0.8);
  box-shadow: 0 0 16px rgba(94, 129, 172, 0.4);
}

/* CLOCK - Elegant Center */
#clock {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.4) 0%,
    rgba(143, 188, 187, 0.3) 100%);
  border: 1px solid rgba(136, 192, 208, 0.5);
  color: #88C0D0;
  font-weight: 700;
  font-size: 14px;
  letter-spacing: 0.5px;
}

#clock:hover {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.6) 0%,
    rgba(143, 188, 187, 0.5) 100%);
  color: #ECEFF4;
  box-shadow: 0 0 20px rgba(136, 192, 208, 0.5);
}

/* WEATHER - Compact but readable */
#custom-weather {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.2) 0%,
    rgba(143, 188, 187, 0.15) 100%);
  border: 1px solid rgba(136, 192, 208, 0.3);
  color: #88C0D0;
  font-weight: 500;
  font-size: 12px;
  letter-spacing: 0.2px;
  padding: 2px 6px;
  margin: 0 4px;
}

#custom-weather:hover {
  background: linear-gradient(135deg,
    rgba(136, 192, 208, 0.5) 0%,
    rgba(143, 188, 187, 0.4) 100%);
  color: #ECEFF4;
  box-shadow: 0 0 15px rgba(136, 192, 208, 0.4);
}

/* NETWORK & AUDIO - Communication */
#network, #pulseaudio, #bluetooth {
  background: linear-gradient(135deg,
    rgba(143, 188, 187, 0.4) 0%,
    rgba(129, 161, 193, 0.3) 100%);
  border: 1px solid rgba(143, 188, 187, 0.4);
  color: #8FBCBB;
}

#network:hover, #pulseaudio:hover, #bluetooth:hover {
  background: linear-gradient(135deg,
    rgba(143, 188, 187, 0.6) 0%,
    rgba(129, 161, 193, 0.5) 100%);
  color: #ECEFF4;
  border-color: rgba(143, 188, 187, 0.8);
  box-shadow: 0 0 16px rgba(143, 188, 187, 0.4);
}

/* STORAGE */
#disk {
  background: linear-gradient(135deg,
    rgba(235, 203, 139, 0.3) 0%,
    rgba(208, 135, 112, 0.2) 100%);
  border: 1px solid rgba(235, 203, 139, 0.4);
  color: #EBCB8B;
}

#disk:hover {
  background: linear-gradient(135deg,
    rgba(235, 203, 139, 0.5) 0%,
    rgba(208, 135, 112, 0.4) 100%);
  color: #ECEFF4;
  box-shadow: 0 0 16px rgba(235, 203, 139, 0.4);
}

/* TRAY - Minimal */
#tray {
  background: rgba(67, 76, 94, 0.6);
  border: 1px solid rgba(76, 86, 106, 0.4);
}

#tray:hover {
  background: rgba(76, 86, 106, 0.8);
  border-color: rgba(129, 161, 193, 0.5);
}